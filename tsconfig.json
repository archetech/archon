{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@didcid/cipher/node": [
        "packages/cipher/src/cipher-node.ts"
      ],
      "@didcid/cipher/web": [
        "packages/cipher/src/cipher-web.ts"
      ],
      "@didcid/cipher/types": [
        "packages/cipher/src/types.ts"
      ],
      "@didcid/browser-hdkey": [
        "packages/browser-hdkey/lib/hdkey.js"
      ],
      "@didcid/common/errors": [
        "packages/common/src/errors.ts"
      ],
      "@didcid/common/utils": [
        "packages/common/src/utils.ts"
      ],
      "@didcid/gatekeeper": [
        "packages/gatekeeper/src/gatekeeper.ts"
      ],
      "@didcid/gatekeeper/types": [
        "packages/gatekeeper/src/types.ts"
      ],
      "@didcid/gatekeeper/client": [
        "packages/gatekeeper/src/gatekeeper-client.ts"
      ],
      "@didcid/gatekeeper/db/*": [
        "packages/gatekeeper/src/db/*"
      ],
      "@didcid/ipfs/helia": [
        "packages/ipfs/src/helia-client.ts"
      ],
      "@didcid/ipfs/utils": [
        "packages/ipfs/src/utils.ts"
      ],
      "@didcid/keymaster": [
        "packages/keymaster/src/keymaster.ts"
      ],
      "@didcid/keymaster/client": [
        "packages/keymaster/src/keymaster-client.ts"
      ],
      "@didcid/keymaster/types": [
        "packages/keymaster/src/types.ts"
      ],
      "@didcid/cipher/passphrase": [
        "packages/cipher/src/passphrase.ts"
      ],
      "@didcid/keymaster/search": [
        "packages/keymaster/src/search-client.ts"
      ],
      "@didcid/keymaster/wallet/*": [
        "packages/keymaster/src/db/*"
      ],
      "@didcid/l402": [
        "packages/l402/src/index.ts"
      ],
      "@didcid/l402/types": [
        "packages/l402/src/types.ts"
      ],
      "@didcid/l402/middleware": [
        "packages/l402/src/middleware.ts"
      ],
      "@didcid/l402/store/memory": [
        "packages/l402/src/store-memory.ts"
      ],
      "@didcid/l402/store/redis": [
        "packages/l402/src/store-redis.ts"
      ]
    }
  },
  "include": [
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
